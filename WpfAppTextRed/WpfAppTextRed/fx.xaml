<Window x:Class="WpfAppTextRed.fx"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTextRed"
        mc:Ignorable="d"
        Title="fx" Height="300" Width="500" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="60"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox Name="lb1" Grid.Column="0" Margin="10" FontSize="15" />
        <ListBox Name="lb2" Grid.Column="2" Margin="10" FontSize="15"></ListBox>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="b1" Content="&gt;" Click="b1_Click" Grid.Column="1" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"></Button>
            <Button Name="b2" Content="&lt;" Click="b2_Click"  Grid.Column="1" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"></Button>
        </StackPanel>


    </Grid>
</Window>
